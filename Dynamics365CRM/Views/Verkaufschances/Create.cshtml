@model Dynamics365CRM.Models.Verkaufschance

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout2";
}

    <h1>Erstell Verkaufschance</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Kontakt" class="control-label"></label>
                <input asp-for="Kontakt" class="form-control" />
                <span asp-validation-for="Kontakt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kunde" class="control-label"></label>
                <input asp-for="Kunde" class="form-control" />
                <span asp-validation-for="Kunde" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Auftragsvolumen Brutto</label>
                <input asp-for="AuftragsvolumenNetto" class="form-control" />
                <span asp-validation-for="AuftragsvolumenNetto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Umsatzsteuer" class="control-label"></label>
                <input asp-for="Umsatzsteuer" class="form-control" />
                <span asp-validation-for="Umsatzsteuer" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Typ" class="control-label"></label>
                <input asp-for="Typ" class="form-control" />
                <span asp-validation-for="Typ" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Betreff" class="control-label"></label>
                <input asp-for="Betreff" class="form-control" />
                <span asp-validation-for="Betreff" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beschreibung" class="control-label"></label>
                <input asp-for="Beschreibung" class="form-control" />
                <span asp-validation-for="Beschreibung" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="isFree" class="control-label"></label>
                <input asp-for="isFree" class="form-control" />
                <span asp-validation-for="isFree" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notiz" class="control-label"></label>
                <input asp-for="Notiz" class="form-control" />
                <span asp-validation-for="Notiz" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Erstellen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="NamensListe">Zurück</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
